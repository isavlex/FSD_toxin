extends ../layouts/main

block varibles
    -var pageTitle = 'Search room'
    -var cssPath = '../../static/scss/main.scss'
    -var headerItems = {"О нас": "/", "Услуги": {"Submenu1": "#", "Super-Submenu2": "#", "Submenu3": "#",}, "Вакансии": "#", "Новости": "#", "Соглашения": {"Submenu1": "#", "Super-Submenu2": "#", "Submenu3": "#",}}
    -var firstFooterItems = {"О нас": "#", "Новости": "#", "Служба поддержки": "#", "Услуги": "#", }
    -var secondFooterItems = {"О сервисе": "#", "Наша команда": "#", "Вакансии": "#", "Инвесторы": "#", }
    -var thirdFooterItems = {"Соглашения": "#", "Сообщества": "#", "Связь с нами": "#"}
    -var aboutFooter = "Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»"
    -var copyrightFooter = "Copyright © 2018 Toxin отель. Все права зачищены."
    -var subscribeTextFooter = "Получайте специальные предложения и новости сервиса"
block content
    .all-site-wrap
        +header({"mode": "site", "items": headerItems, "activeItem": "Home", "registered": false, "buttonLogin": "Войти", "buttonRegister": "Зарегистрироваться", "buttonLoginDataAction": "login", "buttonRegisterDataAction": "register"})
        main.main.main--compilation
            aside.main__filters
                .main__filters-wrap
                    .main__filter
                        +dropdown({"mode": "filter", "head": "даты пребывания в отеле", "addClass": "search-room"})
                    .main__filter
                        +dropdown({"mode": "guests", "head": "Гости", "addClass": "guests", "id": "guests-search"})
                    .main__filter
                        +range-slider({"head": "диапозон цены", "id": "search-rslider"})
                        p.paragraph.small Стоимость за сутки пребывания в номере
                    .main__filter
                        +switches({"mode": "buttons", "heading": "опции", "buttons": ["Можно курить", "Можно с питомцами", "Можно пригласить гостей (до 10 человек)"], "checked": [1, 2]})
                    .main__filter
                        +switches({"mode": "rich", "heading": "Доступность", "buttonsHead": ["Широкий коридор", "Помощник для инвалидов"], "buttonsText": ["Ширина коридоров в номере не менее 91 см.", "На 1 этаже вас встретит специалист  и проводит до номера."], "checked": [1]})
                    .main__filter
                        +dropdown({"mode": "options", "head": "удобства номера", "addClass": "options", "id": "options-search"})
                    .main__filter
                        +switches({"mode": "list", "heading": "дополнительные удобства", "list": ["Завтрак", "Письменный стол", "Стул для кормления", "Кроватка", "Телевизор", "Шампунь", "Телевизор", "Шампунь"], "checked": [1, 2, 3], "state": "shown"})
                    .main__filter.main__filter--result
                        +buttons({"mode": "big", "value": "показать"})
            .main__rooms
                h1.main__header.heading-q Номера, которые мы для вас подобрали
                .main__filters-button
                    +buttons({"mode": "contoured", "value": "Фильтры", "dataAction": "filters"})
                .main__wrap#data-container
                .main__pagination
                    #example-pagination
        +footer({"mode": "complex", "subscriptionClass": "text-field__subscription--catch", "about": aboutFooter, "firstHead": "навигация",  "firstItems": firstFooterItems, "secondHead": "о нас", "secondItems": secondFooterItems, "thirdHead":  "Служба поддержки", "thirdItems": thirdFooterItems, "copyright": copyrightFooter, "subscribeHead": "Подписка","subscribeText": subscribeTextFooter})


block scripts
    script(src="../../static/js/main.js")
    script(src="../../static/js/searchRoom.js")