                    .col
                        h3.heading-mb100 Dropdown
                    .col.text-r
                        h3.heading-mn50 Default
                .row.mb40-indent
                    .col
                        +dropdown()
                .row.mb5-indent
                    .col
                        h3.heading-mb100 masked text field
                    .col.text-r
                        h3.heading-mn50 Default
                .row.mb40-indent
                    .col
                        +text-field("ДД.ММ.ГГГГ", "text-field__input--masked-date")
