mixin features(options)
    //{"img": "name of img from 'icons' folder", "heading": "string", "text": "string"}
    -let modUnderline = ""
    if options.notUnderline
        -modUnderline = "features--not-underline"
    div(class="features " + modUnderline)
        .features__img
            img(src="../../icons/" + options.img + ".svg", alt= options.heading class="features__svg")
        .features__text
            p.heading-mb75= options.heading
            p.paragraph= options.text

