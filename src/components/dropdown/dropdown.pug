mixin dropdown(options)
    -var wrap = options.state ? "dropdown__wrap--" : ""
    if options.mode == "guests"
        div(class="dropdown dropdown--" + options.addClass tabindex="0" )       
            .dropdown__heading                    
                span.dropdown__total-amount.paragraph Сколько гостей
            div(class="dropdown__wrap " + wrap + options.state)
                ul.dropdown__list.heading-mb100
                    li.dropdown__item
                        span.dropdown__type взрослые
                        .dropdown__count.dropdown__adults 
                            .dropdown__minus.dropdown__minus--deactive
                            span.dropdown__number 0
                            .dropdown__plus
                    li.dropdown__item
                        span.dropdown__type дети
                        .dropdown__count.dropdown__children 
                            .dropdown__minus.dropdown__minus--deactive
                            span.dropdown__number 0
                            .dropdown__plus
                    li.dropdown__item
                        span.dropdown__type младенцы
                        .dropdown__count.dropdown__babies 
                            .dropdown__minus.dropdown__minus--deactive
                            span.dropdown__number 0
                            .dropdown__plus
                    
                    .dropdown__actions.heading-mb100
                        a(class="dropdown__clear dropdown__clear--off pink-link") очистить
                        a(class="dropdown__apply pink-link") применить
                    input(type="hidden" name="" value="")
    else if options.mode == "options"
        div(class="dropdown dropdown--" + options.addClass tabindex="0" )
            .dropdown__heading                    
                span.dropdown__total-amount.paragraph спальни, кровати
            div(class="dropdown__wrap " + wrap + options.state)
                    ul.dropdown__list.heading-mb100
                        li.dropdown__item
                            span.dropdown__type спальни
                            .dropdown__count.dropdown__bedrooms 
                                .dropdown__minus.dropdown__minus--deactive
                                span.dropdown__number 0
                                .dropdown__plus
                        li.dropdown__item
                            span.dropdown__type кровати
                            .dropdown__count.dropdown__beds
                                .dropdown__minus.dropdown__minus--deactive
                                span.dropdown__number 0
                                .dropdown__plus
                        li.dropdown__item
                            span.dropdown__type ванные комнаты
                            .dropdown__count.dropdown__bathrooms
                                .dropdown__minus.dropdown__minus--deactive
                                span.dropdown__number 0
                                .dropdown__plus
    else if options.mode == "range"
        div(class="dropdown dropdown--range")
            div(class="dropdown__from")
                h3.heading-mb100= options.rangeHead1
                input(type="text"  placeholder="ДД.ММ.ГГГГ" class="dropdown__heading dropdown__heading--range dropdown__heading--from-" + options.addClass)
            div(class="dropdown__to" + options.mode)
                h3.heading-mb100= options.rangeHead2
                input(type="text"  placeholder="ДД.ММ.ГГГГ" class="dropdown__heading dropdown__heading--range dropdown__heading--to-" + options.addClass)
    else if options.mode == "filter"
        div(class="dropdown dropdown--filtered dropdown--" + options.addClass)
            input( readonly="readonly" spellcheck="false" placeholder="ДД М - ДД М" class="dropdown__heading dropdown__heading--filtered")
                
