mixin footer(options)
    footer.footer
        if options.mode == "complex"
            .footer__main
                .footer__complex-block
                    a(href="/" class="footer__logo-link")
                        img(src="../../icons/logo-text.svg", alt="logo" class="footer__logo-img")
                    p.footer__text.paragraph= options.about
                .footer__complex-block
                    +menu({"mode": "vertical", "head": options.firstHead, "items": options.firstItems})
                .footer__complex-block
                    +menu({"mode": "vertical", "head": options.secondHead, "items": options.secondItems})
                .footer__complex-block
                    +menu({"mode": "vertical", "head": options.thirdHead, "items": options.thirdItems})
                .footer__complex-block
                    section.footer__subscribe
                        h3.heading-mb100 Subscribe to our newsletter
                        p.footer__text.paragraph Receive our latest news and promotions in your inbox!
                        form.footer__form-subscription
                            +text-field({"mode": "subscription"})
            .footer__copyright
                p.paragraph Copyright Â© 2018 Toxin UI Kit. All rights reserved.
                +menu({"mode": "social", "items": {"twitter.svg": "https://twitter.com/", "facebook.svg": "https://facebook.com", "instagram.svg": "https://www.instagram.com/"}})
        else if options.mode == "simple"
            .footer__main.footer__main--simple
                .footer__simple-block
                    a(href="/" class="footer__logo-link")
                        img(src="../../icons/logo-text.svg", alt="logo" class="footer__logo-img")
                .footer__simple-block
                    p.paragraph= options.text
                .footer__simple-block
                    +menu({"mode": "social", "items": {"twitter.svg": "https://twitter.com/", "facebook.svg": "https://facebook.com", "instagram.svg": "https://www.instagram.com/"}})


